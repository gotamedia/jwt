{
    "name": "atoms/jwt",
    "description": "A small and simple library for encoding and decoding of JWT's.",
    "homepage": "https://bitbucket.org/gotamedia/jwt",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Pettersson",
            "email": "peter.pettersson@gotamedia.se"
        }
    ],
    "autoload": {
        "psr-4": {
            "Atoms\\Jwt\\": "src/"
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.2",
        "squizlabs/php_codesniffer": "~3.6",
        "phpmd/phpmd": "~2.9",
        "phan/phan": "~4.0"
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 src",
        "analyze": "phpmd src text phpmd.xml --exclude src/Time/Tests; phan --output-mode text --color --allow-polyfill-parser --no-progress-bar"
    }
}
